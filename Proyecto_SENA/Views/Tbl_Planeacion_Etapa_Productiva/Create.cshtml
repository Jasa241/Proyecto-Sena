@model Proyecto_SENA.Models.Tbl_Planeacion_Etapa_Productiva

@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agregar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">

        <div class="form-horizontal">
            <h4>Planeacion Etapa Productiva</h4>
            <hr />
            @{
                string Validar = ViewBag.Validar;
                if (Validar != null)
                {
                    <div class="alert alert-danger">@ViewBag.Validar </div>
                }
            }

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <label>Actividades a desarrollar</label><br />
            <p>
                Relacione las actividades que el aprendiz va a realizar.<br />
                (Estas deben corresponder al perfil del egresado stablecido <br />
                en el programade formacion que el aprendiz esta desarrollando)
            </p>
            <textarea class="form-control" rows="6" name="Actividades_A_Desarrollar"></textarea>
            <br />
            <label>Evidencias de aprendizaje</label><br />
            <textarea class="form-control" rows="4" name="Evidencias_Aprendizaje"></textarea>
            <br />
            <label>Fecha</label>
            @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
            <br />

            <label>Lugar</label>
            @Html.EditorFor(model => model.Lugar, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Lugar, "", new { @class = "text-danger" })
            <br />

            <label>Observaciones</label><br />
            <textarea class="form-control" rows="4" name="Observaciones"></textarea>
            <br />

            <label>Identificacion del aprendiz</label>
            @Html.EditorFor(model => model.Id_Aprendiz, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Id_Aprendiz, "", new { @class = "text-danger" })
            <br />
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-success" />
            </div>
        </div>
    </div>
}
